{
  "baseUrl": "",
  "titlePrefix": "RepoSense",
  "style": {
    "codeTheme": "light"
  },
  "ignore": [
    "_markbind/layouts/*",
    "_markbind/logs/*",
    "_site/*",
    "site.json",
    "*.md",
    "*.mbd",
    "*.mbdf",
    "*.njk",
    ".git/*",
    "diagrams/*"
  ],
  "pages": [
    {
      "glob": ["**/*.+(md|mbd)"]
    },
    {
      "glob": ["dg/*.+(md|mbd)"],
      "frontmatter": {
        "layout": "dg-layout.md"
      }
    },
    {
      "glob": ["ug/*.+(md|mbd)"],
      "frontmatter": {
        "layout": "ug-layout.md"
      }
    }
  ],
  "deploy": {
    "message": "Site Update.",
    "repo": "https://github.com/reposense/reposense.github.io.git",
    "branch": "master"
  },
  "plugins": ["filterTags"],
  "pluginsContext": {
    "filterTags" : {
      "tags": ["production", "-dev"]
    }
  }
}
